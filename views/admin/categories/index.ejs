<%- include('../../partials/header.ejs')%>
        <body>
            <%- include('../../partials/navbar.ejs')%>
                <div class="container">
                    <div class="card" id='form'>
                        <div class="card-header">
                            <h1>Categorias</h1>
                        </div>
                        <div class="card-body">
                            <a class='corBotao' href="/admin/categories/new">Criar nova categoria</a>
                            <hr>

                            <table class=" table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Título</th>
                                        <th>Slug</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% categories.forEach(category=> { %>
                                        <tr>
                                            <th>
                                                <%= category.id%>
                                            </th>
                                            <th>
                                                <%= category.title%>
                                            </th>
                                            <th>
                                                <%= category.slug%>
                                            </th>
                                            <th>
                                                <a href="/admin/categories/edit/<%= category.id%>" class="btn btn-warning">Editar</a>
                                                <form method="POST" action="/categories/delete" style="display:inline" onsubmit="confirmDelete(event, this)">
                                                    <input type='hidden' name='id' value='<%= category.id%>'>
                                                    <button class="btn btn-danger">Deletar</button>
                                                </form>
                                            </th>

                                        </tr>

                                        <% })%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
        </body>
        <%- include('../../partials/footer.ejs')%>
        <script>
            function confirmDelete(event, form){
                event.preventDefault();//impede o formulária de ser enviado 
                var choice = confirm('Deletar categoria ?');
                if (choice){
                    console.log('apagar');
                    form.submit();
                }
            }
        </script>